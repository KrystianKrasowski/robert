{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "avr-default",
            "displayName": "Production build for AVR device",
            "generator": "Unix Makefiles",
            "toolchainFile": "./cmake/avr-gcc.cmake",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
            }
        },
        {
            "name": "arm-default",
            "displayName": "Production build",
            "generator": "Unix Makefiles",
            "toolchainFile": "./cmake/arm-none-eabi-gcc.cmake",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "hidden": true,
            "cacheVariables": {
            }
        },
        {
            "name": "AVR Debug",
            "inherits": "avr-default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "AVR Release",
            "inherits": "avr-default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "ARM Debug",
            "inherits": "arm-default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ARM Release",
            "inherits": "arm-default",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "test-native",
            "displayName": "Testing build for native host",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "ENABLE_TESTS": "TRUE",
                "UNITY_EXTENSION_FIXTURE": "TRUE"
            }
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "displayName": "Tests for native \"imposter\" build",
            "configurePreset": "test-native",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}